# ui/intermediate.kv
#:kivy 2.1.0

<RootLayoutIntermediate@BoxLayout>:
    id: root_layout_intermediate
    orientation: "vertical"
    padding: dp(5)
    spacing: dp(10)

    FloatLayout:
        size_hint_y: 0.6
        size_hint_x: 1

        AspectRatioTextureWidget:
            id: asp_texture
            size_hint: (1, 1)

    ScrollView:
        size_hint_y: 0.4
        do_scroll_x: False
        do_scroll_y: True

        BoxLayout:
            id: controls_box_mobile
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(10)
            padding: dp(5)

            Label:
                id: status_label
                text: "Idle"
                size_hint_y: None
                height: dp(30)

            BoxLayout:
                size_hint_y: None
                height: dp(50)
                spacing: dp(20)

                ActionButtons:
                    id: action_buttons

#:kivy 2.1.0

<RootLayoutMobile@BoxLayout>:
    id: root_layout_mobile
    orientation: "vertical"
    padding: dp(5)
    spacing: dp(10)

    # Top: AspectRatioTextureWidget (fixed height)
    BoxLayout:
        id: square_container
        size_hint_y: None
        # fix height to keep it square
        height: min(root_layout_mobile.width, root_layout_mobile.height)

        AspectRatioTextureWidget:
            id: asp_texture
            size_hint: 1, 1

    # Middle: Scrollable controls (now fills remainder)
    ScrollView:
        size_hint_y: 1
        size_hint_min: (0.95,0.5)
        do_scroll_x: False
        do_scroll_y: True

        ContentWidget:
            id: contentC

    # Bottom: Action Buttons (fixed height)
    BoxLayout:
        id: action_buttons_container
        size_hint_y: None
        height: dp(50)
        padding: dp(5)
        spacing: dp(10)

        ActionButtons:
            id: action_buttons
